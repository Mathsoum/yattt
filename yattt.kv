#:kivy 1.0

<DayColumn@BoxLayout>:
    size_hint_y: 0.7
    orientation: 'horizontal'
    text: ''

    Label:
        size_hint_x: 0.15
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.text
        canvas.before:
            Color:
                rgba: 0.6,0.6,0.6,1.
            Rectangle:
                pos: self.pos
                size: self.size

    Chronology:
        canvas.before:
            Color:
                rgba: 0.4, 0.8, 0.4, 1.
            Rectangle:
                pos: self.pos
                size: self.size


<DaySeparator>:
    size_hint_y: 0.001


<Controller>:

    BoxLayout:
        orientation: 'vertical'

        DayColumn:
            text: 'Monday'

        DaySeparator:
            width: root.width

        DayColumn:
            text: 'Tuesday'

        DaySeparator:
            width: root.width

        DayColumn:
            text: 'Wednesday'

        DaySeparator:
            width: root.width

        DayColumn:
            text: 'Thursday'

        DaySeparator:
            width: root.width

        DayColumn:
            text: 'Friday'

        DaySeparator:
            width: root.width

        DayColumn:
            text: 'Saturday'

        DaySeparator:
            width: root.width

        DayColumn:
            text: 'Sunday'
